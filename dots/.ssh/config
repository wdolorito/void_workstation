#
# ~/.ssh/config
#
#   generate key: ssh-keygen -t ed25519 -f ~/.ssh/<service>-id_ed25519
#

Host bitbucket-personal
	Hostname bitbucket.org
	User git
	IdentityFile ~/.ssh/bitbucket-id_ed25519

Host github-personal
	Hostname github.com
	User git
	IdentityFile ~/.ssh/github-id_ed25519

Host *
	AddKeysToAgent yes
	IdentitiesOnly yes